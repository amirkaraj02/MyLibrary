@using MyLibrary.Models
@model List<tblLevizjet>
@{
    ViewBag.Title = "Transaksionet";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-top:20px">Lista e Librave te Rikthyer</h2>
<table class="table table-striped table-advance table-hover">
    <tr>
        <th>ID</th>
        <th>Emri Librit</th>
        <th>Emri Perdoruesit</th>
        <th>Data Huazimit</th>
        <th>Data Dorezimit</th>
        <th>Punet</th>
    </tr>
    @foreach (var lev in Model)
    {
        <tr>
            <td>@lev.ID</td>
            <td>@lev.tblLiber.Emri</td>
            <td>@lev.tblPerdoruesit.Emri @lev.tblPerdoruesit.Mbiemri</td>
            <td>@Convert.ToDateTime(lev.DataMarrjes).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(lev.DataRikthimitPerdoruesit).ToString("dd/MM/yyyy")</td>
            <td>
                <a href="#" class="btn btn-outline-dark" style="background-color:#00ff90">Te dhenat</a>
            </td>
        </tr>
    }

</table>
