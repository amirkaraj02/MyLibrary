@using MyLibrary.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.PagedList<tblPerdoruesit>

@{
    ViewBag.Title = "Perdoruesit";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-top:20px">Perdoruesit</h2>

<table class="table table-striped table-advance table-hover">
    <tr>
        <th>ID</th>
        <th>Emri</th>
        <th>Mbiemri</th>
        <th>E-Mail</th>
        <th>User Name</th>
        <th>Password</th>
        <th>Fotografia</th>
        <th>Nr. Telefonit</th>
        <th>Shkolla</th>
        <th>Punet</th>
    </tr>
    @foreach (var perdoruesit in Model)
    {
        <tr>
            <td>@perdoruesit.ID</td>
            <td>@perdoruesit.Emri</td>
            <td>@perdoruesit.Mbiemri</td>
            <td>@perdoruesit.EMail</td>
            <td>@perdoruesit.UserName</td>
            <td>@perdoruesit.Password</td>
            <td><img src=" @perdoruesit.Fotografia" width="30" height="30" /></td>
            <td>@perdoruesit.Telefoni</td>
            <td>@perdoruesit.Shkolla</td>
            <td>
                <a href="/Perdoruesit/Update/@perdoruesit.ID" class="btn btn-info">Perditeso</a>
                @Html.ActionLink("Fshi", "Delete", new { id = perdoruesit.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Jeni i sigurt qe doni ta fshini...')" })

            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, pages => Url.Action("Index", new { pages }))

<a href="/Perdoruesit/Create" class="btn btn-primary">Shto Perdorues te ri</a>
