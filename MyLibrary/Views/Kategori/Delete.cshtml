@model MyLibrary.Models.tblKategori
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <div class="row" style="margin-top:20px">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Fshi Kategorine
                </header>
                <div class="panel-body">
                    <div class=" form">
                        <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post" enctype="multipart/form-data" action="/Kategori/Delete/@Model.ID">

                            <div class="form-group ">
                                <div class="col-lg-10">
                                    <input class="form-control " id="Emri" name="Emri" readonly value="@Model.Emri" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">Fshi</button>
                                    <a href="/Kategori/Index/" type="button" class="btn btn-shadow btn-warning">Anullo</a>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>
